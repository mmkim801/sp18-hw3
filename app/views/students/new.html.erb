<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <!-- <%= text_field_tag(:full_name) %> -->
  <%= text_field_tag(:full_name, nil, placeholder: @placeholder_name) %>

  <%= label_tag(:sid, "Student ID") %>
  <%= text_field_tag(:sid, nil, placeholder: @placeholder_sid) %>

  <%= label_tag(:year, "Year") %>
  <!-- <%= text_field_tag(:year) %> -->
  <%= text_field_tag(:year, nil, placeholder: @placeholder_year) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>